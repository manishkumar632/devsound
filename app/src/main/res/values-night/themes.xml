        <item name="android:textColorPrimary">@color/colorTextPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorTextSecondaryDark</item>
        
        <!-- Material 3 color attributes -->
        <item name="colorPrimaryContainer">@color/colorPrimary</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
